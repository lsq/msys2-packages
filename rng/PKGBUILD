# Maintainer: Renato Silva <br.renatosilva@gmail.com>

_realname='rng'
pkgname="${_realname}"
# pkgver=r66.110a48b
pkgver=1.0.4.20284b3
pkgrel=1
pkgdesc='Print range of lines to stdout.'
url='https://github.com/nickolasburr/rng'
license=(BSD)
arch=(i686 x86_64)

makedepends=(
  gcc
  git
  zlib
  zlib-devel
)
# install="${_realname}.install"
# _commit="b5fcc0f3100a20bbb15602c99f4297dbe16ddad9"
# source=("pactoys::git+https://github.com/msys2/pactoys#commit=${_commit}"
# source=("pactoys::git+https://github.com/lsq/pactoys#commit=${_commit}"
source=("rng::git+https://github.com/nickolasburr/rng"
        '001-not-found-limts.patch'
        )
sha256sums=('SKIP'
            '00759636cf5ac69c32a0d1571c7c513c9005379a87eb4314b75913b73b0322b8')

pkgver() {
  cd "${srcdir}/${_realname}"
  # git checkout main
  # printf "r%s.%s" $(git rev-list --count HEAD) $(git rev-parse --short HEAD)
  # printf "%s"  r66.110a48b
  latest_version_published=$(git describe --tags --abbrev=0 | tail -1 | sed 's/^v//')
  # latest_commit_hash=$(git log -1 --format="%h")
  # echo "$latest_version_published.$latest_commit_hash"
  printf "%s.r%s.%s" $latest_version_published $(git rev-list --count HEAD) $(git rev-parse --short HEAD)
}

prepare() {
  cd "${srcdir}/${_realname}"
  patch -p1 -i "${srcdir}/001-not-found-limts.patch"
}

build() {
  cd "${srcdir}/${_realname}"
  make
}

package() {
  cd "${srcdir}/${_realname}"
  install -D "$_realname" ${pkgdir}/usr/bin/${_realname}
  install -d ${pkgdir}/usr/share/man/man1
  cp "man/${_realname}.1.gz" "${pkgdir}/usr/share/man/man1/"
}

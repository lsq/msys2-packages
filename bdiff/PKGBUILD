# Maintainer: Maksim Bondarenkov <maksapple2306@gmail.com>

_realname=bdiff
pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=0.9.2.r120.24c4225
pkgrel=1
pkgdesc="A binary diffing tool"
arch=('any')
mingw_arch=('ucrt64' 'clang64' 'clangarm64')
url='https://github.com/ethteck/bdiff'
license=('spdx:MIT')
makedepends=("${MINGW_PACKAGE_PREFIX}-rust" "git")
# optdepends=("${MINGW_PACKAGE_PREFIX}-fzf: for tui usage"
            # "${MINGW_PACKAGE_PREFIX}-delta: for diff colourizer")
# source=("${url}/archive/v${pkgver}/${_realname}-${pkgver}.tar.gz")
source=("$_realname::git+https://github.com/ethteck/bdiff.git")
sha256sums=('SKIP')

pkgver() {
    cd "${srcdir}/${_realname}"

    latest_version_published=$(git describe --tags --abbrev=0 | tail -1 | sed 's/^v//')
    # latest_commit_hash=$(git log -1 --format="%h")
    # echo "$latest_version_published.$latest_commit_hash"
    printf "%s.r%s.%s" $latest_version_published $(git rev-list --count HEAD) $(git rev-parse --short HEAD)
}
prepare() {
  cd "${srcdir}/${_realname}"

  cargo fetch --locked --target "${RUST_CHOST}"
}

build() {
  cd "${srcdir}/${_realname}"

  cargo build --profile release-lto --target x86_64-pc-windows-gnu --bin $_realname
}

check() {
  cd "${srcdir}/${_realname}"

  cargo test --release-lto --frozen
}

package() {
  cd "${srcdir}/${_realname}"

  cargo install \
    --offline \
    --no-track \
    --frozen \
    --path app \
    --root "${pkgdir}${MINGW_PREFIX}"

  install -Dm644 LICENSE "${pkgdir}${MINGW_PREFIX}/share/licenses/${_realname}/LICENSE"
}

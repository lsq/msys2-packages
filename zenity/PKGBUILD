# Maintainer: Alexey Pavlov <alexpux@gmail.com>

_realname=zenity
# pkgbase=mingw-w64-${_realname}-git
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}-git"
pkgver=4.2.0
pkgrel=1
pkgdesc="The GNOME port of the venerable 'dialog' program"
arch=('any')
# mingw_arch=('mingw64' 'ucrt64' 'clang64' 'clangarm64')
mingw_arch=('ucrt64')
url="https://github.com/GNOME/zenity"
license=('BSD')
provides=("${MINGW_PACKAGE_PREFIX}-${_realname}")
conflicts=("${MINGW_PACKAGE_PREFIX}-${_realname}")
depends=("${MINGW_PACKAGE_PREFIX}-perl-Locale-Gettext"
         "${MINGW_PACKAGE_PREFIX}-doxygen"
         "${MINGW_PACKAGE_PREFIX}-gtk4"
         "${MINGW_PACKAGE_PREFIX}-itstool"
         "${MINGW_PACKAGE_PREFIX}-libadwaita"
         "${MINGW_PACKAGE_PREFIX}-gettext-runtime")
makedepends=("${MINGW_PACKAGE_PREFIX}-cc"
             "${MINGW_PACKAGE_PREFIX}-perl-Locale-Gettext"
             "${MINGW_PACKAGE_PREFIX}-doxygen"
             "${MINGW_PACKAGE_PREFIX}-meson"
             "${MINGW_PACKAGE_PREFIX}-gtk4"
             "${MINGW_PACKAGE_PREFIX}-itstool"
             "${MINGW_PACKAGE_PREFIX}-libadwaita"
             "${MINGW_PACKAGE_PREFIX}-help2man"
             "git")
# _commit=52bbd4365ab5febdbb73220c4e6ad9c9bf65231b
# source=("${_realname}"::"git+https://github.com/lsq/zenity.git#commit=${_commit}"
# source=("${_realname}"::"git+https://github.com/lsq/zenity.git")
source=("${_realname}"::"git+$url.git"
        "001-mingw-setup.patch"
        )
sha256sums=('SKIP'
        'SKIP')
MESON_BUILD_DIR="_build"

pkgver() {
  cd "${srcdir}/${_realname}"
  # printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
  # printf "%s" "$(git describe --abbrev=0)"
    # latest_version_published=$(git tag --sort=committerdate | tail -1 | sed 's/^v//')
    latest_version_published=$(git for-each-ref --sort=taggerdate --format '%(refname:strip=2)' refs/tags| tail -1 | sed 's/^v//')
    latest_commit_hash=$(git log -1 --format="%h")
    echo "$latest_version_published.$latest_commit_hash"
}

prepare() {
  cd "${srcdir}"/${_realname}
  git config --list
  patch -p1 -i "${srcdir}/001-mingw-setup.patch"
  # git checkout windows
  # git rebase master windows
}

build() {

  cd "${srcdir}"/${_realname}
  meson setup --prefix `cygpath -am "${pkgdir}/${MINGW_PREFIX}"` "${MESON_BUILD_DIR}"
  meson test -C "${MESON_BUILD_DIR}"
}

package() {
  cd "${srcdir}"/${_realname}
  ninja -C "${MESON_BUILD_DIR}" install
}
